pipeline {
    agent any

    triggers {
        githubPush()     // GitHub webhook trigger
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Ankitapansare25/Static-Website.git'
            }
        }

        stage('Deploy to EC2') {
    steps {
        sshagent(['mumbai-key']) {
            sh '''
ssh -o StrictHostKeyChecking=no ec2-user@43.204.102.239 << 'EOF'
sudo rm -rf /usr/share/nginx/html/*
sudo rm -rf /tmp/site
sudo git clone https://github.com/Ankitapansare25/Static-Website.git /tmp/site
sudo cp -r /tmp/site/* /usr/share/nginx/html
sudo chown -R nginx:nginx /usr/share/nginx/html
sudo chmod -R 755 /usr/share/nginx/html
sudo systemctl restart nginx
EOF
            '''
        }
    }
}

    
    post {
        success {
            echo "✅ Deployment Successful"
        }
        failure {
            echo "❌ Deployment Failed"
        }
    }
    }
}